@model ServiceRequest

   <form action="RequestService" method="post">
        <div class="container">
            <div class="row">
                <div class="col-12" style="text-align: center">
                    <h1>Request A Service</h1>
                </div>

                <div style="align-items: center; justify-content: center">
                    @if (Model.Request != null)
                    {
                        <div class="d-flex flex-column">
                            <div class="form-group">

                                <div class="col-12" style="text-align:center">
                                    <label class="mt-5" style="color:black" asp-for="@Model.Request.RequestType"></label>
                                </div>

                                <div class="col-12 mt-3 offset-4 offset-md-5">
                                    <select class="p-1" asp-for="@Model.Request.RequestType">
                                        <option disabled selected hidden>Open this select menu</option>
                                        @if (Model.Services != null)
                                        {
                                            @foreach (var service in Model.Services)
                                            {
                                                <option value="@service.name">@service.name</option>
                                            }
                                        }

                                    </select>
                                </div>

                                <div class="col-12 mt-1" style="text-align: center">
                                    <span asp-validation-for="@Model.Request.RequestType" class="text-danger"></span>
                                </div>
                            </div>


                            <div class="form-group">

                                <div class="col-12 mt-5" style="text-align: center">
                                    <label class="mb-2" style="color:black" asp-for="@Model.Request.Description"></label>
                                </div>

                                <div class="col-12 mt-3">
                                    <textarea class="w-50 form-control" style="display: block; margin: 0 auto" asp-for="@Model.Request.Description"></textarea>
                                </div>

                                <div class="col-12 mt-1" style="text-align: center">
                                    <span asp-validation-for="@Model.Request.Description" class="text-danger"></span>
                                </div>
                            </div>

                        </div>
                    }
                </div>
                <div class="mt-5">
                    <button type="submit" class="btn btn-success rounded w-25" style="display: block; margin: 0 auto">Request</button>
                </div>


            </div>
        </div>
    </form>