@model List<Request>

<div class="container">
    <div class="row">
        <div class="d-flex flex-column">
            <div class="mb-4">
                <h2>My Requests</h2>
            </div>
            @foreach (var request in Model)
            {
                <div class="d-flex flex-column">
                    <h3 class="text-primary">@request.RequestType</h3>
                    <p class="mt-3">@request.Description</p>
                </div>

                <div class="d-flex mt-5 mb-3">
                    @if (!request.InProgress && !request.IsCompleted)
                    {
                        <form method="post" asp-controller="Home" asp-action="CancelRequest" asp-route-id="@request.RequestId">
                            <button type="submit" class="btn btn-danger me-5">Cancel</button>
                        </form>

                        <p class="text-primary mt-1">Pending</p>
                    }

                    @if (request.InProgress)
                    {
                        <p class="text-secondary mt-1">In Progress</p>
                    }

                    @if (request.IsCompleted)
                    {
                        <p class="text-success mt-1">Completed</p>
                    }

                </div>
            }
        </div>
    </div>
</div>