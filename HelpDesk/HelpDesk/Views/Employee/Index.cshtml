@model DetailModel

<div class="container">
    <div class="row">
        <div class="d-flex flex-column">
            <div>
                <p>Available Tasks</p>
            </div>

            @if (Model.Request != null)
            {

                @foreach (var request in Model.Request)
                {
                    @if (!request.InProgress && !request.IsCompleted)
                    {

                        <div class="d-flex flex-column mb-3">
                            <div style="border: 1px solid black; border-radius:10px; width: 100%" class="d-flex">
                                <div class="d-flex flex-column ms-3">
                                    <p>User:</p>
                                    <div class="d-flex">
                                        <i class="bi bi-person"></i>
                                        <p class="ms-2">@request.UserFullName</p>
                                    </div>
                                </div>

                                <div class="d-flex flex-column ms-5">
                                    <p>Request:</p>
                                    <p>@request.RequestType</p>
                                </div>

                                <div class="d-flex flex-column ms-5">
                                    <p>Data:</p>
                                    <p>@request.DateRequested</p>
                                </div>

                                <div class="d-flex flex-column ms-5" style="max-width:450px; word-wrap: break-word;">
                                    <p>Description:</p>
                                    <p>@request.Description</p>
                                </div>


                                <div class="ms-auto mt-4 me-2">
                                    <a class="btn btn-success text-white" asp-controller="Employee" asp-action="AcceptRequest" asp-route-id="@request.RequestId">
                                        Accept
                                    </a>
                                </div>
                            </div>

                        </div>
                    }


                }

            }

            <div>
                <p>Tasks In Progress</p>
            </div>

            @if (Model.Employee.RequestsHandled != null)
            {
                @foreach (var request in Model.Employee.RequestsHandled)
                {
                    @if (!request.IsCompleted)
                    {
                        <div class="d-flex flex-column mb-3">
                            <div style="border: 1px solid black; border-radius:10px; width: 100%" class="d-flex">
                                <div class="d-flex flex-column ms-3">
                                    <p>User:</p>
                                    <div class="d-flex">
                                        <i class="bi bi-person"></i>
                                        <p class="ms-2">@request.UserFullName</p>
                                    </div>
                                </div>

                                <div class="d-flex flex-column ms-5">
                                    <p>Request:</p>
                                    <p>@request.RequestType</p>
                                </div>

                                <div class="d-flex flex-column ms-5">
                                    <p>Data:</p>
                                    <p>@request.DateRequested</p>
                                </div>

                                <div class="d-flex flex-column ms-5" style="max-width:450px; word-wrap: break-word;">
                                    <p>Description:</p>
                                    <p>@request.Description</p>
                                </div>


                                <div class="ms-auto mt-4 me-2">
                                    <a class="btn btn-success text-white" asp-controller="Employee" asp-action="CompleteRequest" asp-route-id="@request.RequestId">
                                        Mark As Complete
                                    </a>
                                </div>
                                <div class="mt-4 me-2">
                                    <a class="btn btn-danger text-white" asp-controller="Employee" asp-action="CancelRequest" asp-route-id="@request.RequestId">
                                        Cancel
                                    </a>
                                </div>
                            </div>

                        </div>
                    }

                }


            }









        </div>

    </div>

</div>

 