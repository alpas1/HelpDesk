@using HelpDesk.Models;
@model OldNewPasswordVM;

@{
    ViewData["Title"] = "Sign up for a new account";
}

<div class="container">
    <div class="row">
        <div class="mt-5" style="text-align:center">
            <h4>Change your password</h4>
        </div>

        @if (TempData["Error"] != null)
        {
            <div class="col-12 col-md-8 alert alert-danger offset-2">
                <span>@TempData["Error"]</span>
            </div>
        }

        <div class="row">
            <div class="col-12 col-md-8 offset-2">
                <form asp-action="ChangePassword" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="OldPassword" class="control-label"></label>
                        <input asp-for="OldPassword" class="form-control" />
                        <span asp-validation-for="OldPassword" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="NewPassword" class="control-label"></label>
                        <input asp-for="NewPassword" class="form-control" />
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="ConfirmPassword" class="control-label"></label>
                        <input asp-for="ConfirmPassword" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-2">
                        <input class="btn btn-success float-end" type="submit" value="Change Password" />
                    </div>

                </form>
            </div>

        </div>
    </div>

</div>