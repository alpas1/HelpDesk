@model List<Service>

<div class="container">
    <div class="row d-flex flex-column">
        <div class="d-flex col-12 col-md-2">
            <input type="text" class="ms-md-auto w-100" placeholder="Search for a service" />
            <div class="p-1 ms-1 rounded" style="border: 1px solid #10FF20;">
                <a class="btn w-50"><i class="bi bi-search"></i></a>
            </div>
        </div>

        @foreach (var item in Model)
        {
            <div class="row d-flex mt-3">
                <div class="d-flex col-12 col-md-6 mt-5">
                    <div style="position: relative">
                        <img class="img-fluid" style="max-width: 100%; height:auto; border-radius: 30px" src="@item.imageURL" alt="@item.name" />
                    </div>
                </div>

                <div class="d-flex flex-column col-12 col-md-6 ServiceDescription">
                    <h2>@item.name</h2>
                    <p>
                        @item.description
                    </p>
                    <button class="btn btn-primary text-white">Request</button>
                </div>
            </div>
        }


    </div>
</div>